@using WhatDoYouOwn_ASPNET.Models
@model UserModel

<!DOCTYPE html>
<html>
<head>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/images/WD.png" rel="icon" />
    <title>WDYO - Login</title>
</head>
<body class="singin-page">
    <main class="form-position">
        <form id="form-itens" method="get" asp-controller="SingIn" asp-action="EnterAccount">
            <label>Nome</label>
            <input class="content-form" type="text" placeholder="Informe seu nome." required asp-for="Nome" />

            <label>Sobrenome</label>
            <input class="content-form" type="text" placeholder="Informe seu sobrenome." required asp-for="Sobrenome" />

            <label>Email</label>
            <input class="content-form" type="email" placeholder="Informe seu email." required asp-for="Email" />

            <label>Senha</label>
            <input class="content-form" type="password" placeholder="Informe uma senha." maxlength="25" required asp-for="Senha" />

            <button id="input-button" type="submit">Entrar</button>

            @{
                <span style="padding: 3% 0% 3% 0%; text-align: center; color:#990000;">@TempData["ErrorMensage"]</span>
            }

            <span>Não tem uma conta? Acesse a página de cadastro <a asp-controller="SingUp" asp-action="Index">aqui</a>.</span>
        </form>
    </main>
</body>
</html>